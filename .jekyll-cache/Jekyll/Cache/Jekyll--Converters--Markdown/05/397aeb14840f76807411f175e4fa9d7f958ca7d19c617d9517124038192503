		<span class="p">}</span>
		
		<span class="nf">System</span><span class="p">.</span><span class="n">out</span><span class="p">.</span><span class="n">print</span><span class="p">(</span><span class="s2">"배열 b의 요솟수 : "</span><span class="p">);</span>
		<span class="n">int</span> <span class="n">nb</span> <span class="p">=</span> <span class="n">stdIn</span><span class="p">.</span><span class="n">nextInt</span><span class="p">();</span>
		
