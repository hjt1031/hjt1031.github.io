		<span class="n">for</span><span class="p">(</span><span class="n">int</span> <span class="n">i</span> <span class="p">=</span> <span class="m">0</span><span class="p">;</span> <span class="n">i</span> <span class="p">&lt;</span><span class="n">nb</span><span class="p">;</span> <span class="n">i</span><span class="p">++)</span> <span class="p">{</span>
