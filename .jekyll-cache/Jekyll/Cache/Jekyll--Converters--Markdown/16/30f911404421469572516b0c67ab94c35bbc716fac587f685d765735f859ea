	for(int i = 0; i &lt;nx; i++) {
		System.out.print("x[" + i + "]:");
		x[i] = stdIn.nextInt();
	}
	
	shellSort(x, nx);	//ë°°ì—´ xë¥¼ ì…€ ì •ë ¬
	
