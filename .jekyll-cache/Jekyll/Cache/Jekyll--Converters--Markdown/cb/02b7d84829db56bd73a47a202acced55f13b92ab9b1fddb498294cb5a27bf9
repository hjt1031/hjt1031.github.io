<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>state = {
    count: 0
  }
  add = () =&gt; {
    this.setState({count : this.state.count + 1});
  };
  minus = () =&gt; {
    this.setState({count : this.state.count - 1});
  };
